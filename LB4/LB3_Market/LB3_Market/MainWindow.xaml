<Window x:Class="LB3_Market.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LB3_Market"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="Лаба 4 - маркетплейс" Height="450" Width="800">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

            <!-- Форма ввода данных -->
            <StackPanel Orientation="Vertical" Width="450">
                <StackPanel>
                    <TextBlock Text="Username: " VerticalAlignment="Center"/>
                    <TextBox x:Name="UsernameInput" 
                     />
                </StackPanel>

                <StackPanel >
                    <TextBlock Width="70" Text="Password: " HorizontalAlignment="Left" />
                    <TextBox x:Name="PasswordInput" 
                     />
                </StackPanel>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="LoginBtn"
                 Click="LoginBtn_Click"
                 Content="Login"/>
                <Button x:Name="ExitBtn" Content="Exit"
                 Click="ExitBtn_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
