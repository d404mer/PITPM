<Window x:Class="LB3_Market.AddProdw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LB3_Market"
        mc:Ignorable="d"
        Title="AddProdw" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock  FontWeight="Bold" Text="Название товара:" />
            <TextBox x:Name="ProductNameTextBox"/>

            <TextBlock  FontWeight="Bold" Text="Описание:" />
            <TextBox x:Name="DescriptionTextBox"/>

            <TextBlock FontWeight="Bold" Text="Цена:" />
            <TextBox x:Name="PriceTextBox"/>

            <TextBlock  FontWeight="Bold" Text="URL изображения:" />
            <TextBox x:Name="ImageURLTextBox"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
